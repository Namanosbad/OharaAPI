@page "/livros"
@using Ohara.API.Shared.Responses
@using Ohara.APP.Client.Services
@* --- INJEÇÕES NO TOPO (Apenas aqui) --- *@
@inject LivroService LivroService
@inject IJSRuntime JS
@inject NavigationManager Navigation

<style>
    /* Reaproveitando os tokens de cor */
    :root {
        --map-bg: #e5d1a5;
        --p-base: #d2b48c;
        --p-dark: #8b6d45;
        --p-light: #e8d5b5;
        --ink: #2a1b12;
        --danger: #8b0000;
        --edit: #003366;
    }

    /* CONTAINER PRINCIPAL */
    .adventure-container {
        min-height: 100vh;
        width: 100%;
        background: var(--map-bg) url('images/mapa-fundo.png') no-repeat center center;
        background-size: cover;
        background-attachment: fixed;
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 5vh 20px;
    }

    /* CABEÇALHO E BUSCA */
    .header-area {
        text-align: center;
        margin-bottom: 40px;
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 15px;
    }

    .page-title {
        font-family: 'Pirata One', cursive;
        font-size: 3.5rem;
        color: var(--ink);
        text-shadow: 2px 2px var(--p-base);
        margin: 0;
    }

    .controls-row {
        display: flex;
        gap: 15px;
        flex-wrap: wrap;
        justify-content: center;
    }

    .search-ohara {
        font-family: 'Special Elite', cursive;
        padding: 12px 25px;
        width: 350px;
        border: 3px solid var(--ink);
        background: var(--p-light);
        color: var(--ink);
        box-shadow: 4px 4px 0px rgba(0,0,0,0.2);
        outline: none;
        font-size: 1rem;
    }

    .btn-novo {
        background: var(--ink);
        color: var(--p-light);
        border: 2px solid var(--p-base);
        padding: 10px 20px;
        font-family: 'Cinzel Decorative', serif;
        font-weight: bold;
        cursor: pointer;
        transition: 0.3s;
        box-shadow: 4px 4px 0px rgba(0,0,0,0.3);
    }

        .btn-novo:hover {
            transform: scale(1.05);
            background: #000;
        }

    /* GRID */
    .wanted-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 40px;
        max-width: 1300px;
        width: 100%;
        padding-bottom: 50px;
    }

    /* CARTAZ DE LIVRO */
    .wanted-card {
        position: relative;
        padding: 20px 15px;
        background: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='n'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.7' numOctaves='3'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23n)' opacity='0.25'/%3E%3C/svg%3E"), radial-gradient(circle at 15% 15%, rgba(139, 69, 19, 0.2), transparent 35%), radial-gradient(circle, var(--p-light) 0%, var(--p-base) 60%, var(--p-dark) 100%);
        border: 2px solid var(--ink);
        outline: 4px solid var(--p-base);
        box-shadow: 0 0 0 6px var(--ink), 12px 15px 25px rgba(0,0,0,0.4);
        display: flex;
        flex-direction: column;
        align-items: center;
        transition: transform 0.3s ease;
    }

        .wanted-card:hover {
            transform: translateY(-8px) rotate(-1deg);
            z-index: 10;
        }

    .thumbtack {
        position: absolute;
        width: 14px;
        height: 14px;
        background: radial-gradient(circle at 30% 30%, #666, #111);
        border-radius: 50%;
        top: 8px;
        z-index: 5;
    }

    .tack-left {
        left: 8px;
    }

    .tack-right {
        right: 8px;
    }

    .wanted-header-text {
        font-family: 'Pirata One', cursive;
        font-size: 2.2rem;
        color: var(--ink);
        letter-spacing: 3px;
        margin-bottom: 8px;
        border-bottom: 3px solid var(--ink);
        line-height: 1;
    }

    .book-cover-frame {
        border: 3px solid var(--ink);
        padding: 5px;
        width: 100%;
        height: 200px;
        display: flex;
        justify-content: center;
        align-items: center;
        background: rgba(42, 27, 18, 0.1);
        margin-bottom: 10px;
    }

    .book-icon {
        font-size: 5rem;
        opacity: 0.8;
    }

    .book-info {
        text-align: center;
        width: 100%;
    }

    .book-title {
        font-family: 'Special Elite', cursive;
        font-size: 1.2rem;
        font-weight: bold;
        color: var(--ink);
        text-transform: uppercase;
        margin-bottom: 5px;
        min-height: 2.4rem;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .book-genre {
        font-family: 'Old Standard TT', serif;
        font-size: 0.9rem;
        font-style: italic;
        background: var(--ink);
        color: var(--p-light);
        padding: 2px 8px;
        display: inline-block;
        margin-bottom: 10px;
        border-radius: 2px;
    }

    .book-desc {
        font-family: 'Old Standard TT', serif;
        font-size: 0.9rem;
        color: var(--ink);
        margin-bottom: 10px;
        height: 40px;
        overflow: hidden;
    }

    .actions {
        display: flex;
        gap: 10px;
        justify-content: center;
        width: 100%;
        border-top: 1px dashed var(--ink);
        padding-top: 10px;
    }

    .btn-action {
        border: none;
        background: none;
        cursor: pointer;
        font-family: 'Cinzel Decorative', serif;
        font-weight: bold;
        font-size: 0.9rem;
        transition: 0.2s;
        padding: 5px 10px;
        border: 1px solid transparent;
    }

    .btn-edit {
        color: var(--edit);
    }

    .btn-delete {
        color: var(--danger);
    }

    .loading-msg {
        font-family: 'Special Elite';
        font-size: 1.5rem;
        color: var(--ink);
    }

    .error-msg {
        color: var(--danger);
        font-family: 'Special Elite';
        background: rgba(255,255,255,0.5);
        padding: 10px;
    }
</style>

<div class="adventure-container">
    <div class="header-area">
        <h2 class="page-title">Tesouros Literários</h2>

        <div class="controls-row">
            <input @bind="filtro" @bind:event="oninput" placeholder="Buscar título..." class="search-ohara" />
            <button class="btn-novo" @onclick="IrParaNovoLivro">Catalogar Novo +</button>
        </div>
    </div>

    @if (carregando)
    {
        <div class="loading-msg">Decifrando os Poneglyphs...</div>
    }
    else if (!string.IsNullOrEmpty(erro))
    {
        <div class="error-msg">⚠️ @erro</div>
    }
    else
    {
        <div class="wanted-grid">
            @foreach (var livro in LivrosFiltrados)
            {
                <div class="wanted-card">
                    <div class="thumbtack tack-left"></div>
                    <div class="thumbtack tack-right"></div>

                    <div class="wanted-header-text">WANTED BOOK</div>

                    <div class="book-cover-frame">
                        <div class="book-icon">📖</div>
                    </div>

                    <div class="book-info">
                        <div class="book-title">@livro.Titulo</div>
                        <div class="book-genre">@livro.Genero</div>
                        <div class="book-desc">
                            @(string.IsNullOrEmpty(livro.Descricao) ? "Sem registros antigos..." : livro.Descricao)
                        </div>

                        <div class="actions">
                            <button class="btn-action btn-edit" @onclick="() => EditarLivro(livro.Id)">
                                ⚓ Editar
                            </button>
                            <button class="btn-action btn-delete" @onclick="() => ExcluirLivro(livro.Id)">
                                ✖ Queimar
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    // --- REMOVI OS [INJECT] DAQUI PORQUE JÁ ESTÃO NO TOPO ---

    private List<LivroResponse> livros = new();
    private bool carregando = true;
    private string erro = string.Empty;
    private string filtro = string.Empty;

    private IEnumerable<LivroResponse> LivrosFiltrados =>
        livros.Where(l => string.IsNullOrWhiteSpace(filtro) ||
                          l.Titulo.Contains(filtro, StringComparison.OrdinalIgnoreCase))
              .ToList();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            livros = await LivroService.ObterTodos();
        }
        catch (Exception ex)
        {
            erro = $"Tempestade ao carregar: {ex.Message}";
        }
        finally
        {
            carregando = false;
        }
    }

    private void IrParaNovoLivro()
    {
        Navigation.NavigateTo("/livros/novo");
    }

    private void EditarLivro(Guid id)
    {
        Navigation.NavigateTo($"/livros/editar/{id}");
    }

    private async Task ExcluirLivro(Guid id)
    {
        var confirmado = await JS.InvokeAsync<bool>("confirm", "Este conhecimento será perdido para sempre. Deseja realmente queimar este livro?");

        if (!confirmado)
            return;

        var sucesso = await LivroService.Deletar(id);

        if (sucesso)
        {
            livros = livros.Where(l => l.Id != id).ToList();
        }
        else
        {
            erro = "A Marinha impediu a destruição deste livro.";
        }
    }
}