@page "/livros/novo"
@using Ohara.API.Shared.Requests
@using Ohara.API.Shared.Enums
@using Ohara.APP.Client.Services
@inject LivroService LivroService
@inject NavigationManager Navigation

<style>
    :root {
        --map-bg: #e2c58a;
        --p-base: #d2b48c;
        --p-dark: #8b6d45;
        --p-light: #f4e4bc;
        --ink: #3d2b1f;
    }

    .adventure-container {
        min-height: 100vh;
        width: 100%;
        background: var(--map-bg) url('images/mapa-fundo.png') no-repeat center center;
        background-size: cover;
        background-attachment: fixed;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 40px 20px;
    }

    /* PERGAMINHO ORIGINAL COM SOMBRAS REAIS */
    .scroll-form {
        position: relative;
        max-width: 550px;
        width: 100%;
        padding: 60px 50px;
        background: var(--p-light);
        background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='n'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.7' numOctaves='3'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23n)' opacity='0.15'/%3E%3C/svg%3E"), linear-gradient(to bottom, rgba(255,255,255,0.2), rgba(0,0,0,0.05));
        border: 2px solid var(--ink);
        /* SOMBRAS REAIS APRIMORADAS */
        box-shadow: 2px 2px 5px rgba(0,0,0,0.2), 15px 25px 45px rgba(0,0,0,0.4), inset 0 0 40px rgba(139, 109, 69, 0.2);
        border-radius: 2px 15px 2px 15px;
    }

        .scroll-form::before, .scroll-form::after {
            content: "";
            position: absolute;
            left: -15px;
            right: -15px;
            height: 25px;
            background: var(--p-dark);
            border: 2px solid var(--ink);
            border-radius: 12px;
            box-shadow: 0 5px 12px rgba(0,0,0,0.4); /* Sombra nas alças */
        }

        .scroll-form::before {
            top: -12px;
        }

        .scroll-form::after {
            bottom: -12px;
        }

    .form-title {
        font-family: 'Pirata One', cursive;
        font-size: 3rem;
        color: var(--ink);
        text-align: center;
        margin-bottom: 35px;
        border-bottom: 2px solid var(--ink);
        padding-bottom: 10px;
    }

    .input-group {
        margin-bottom: 25px;
        display: flex;
        flex-direction: column;
    }

        .input-group label {
            font-family: 'Cinzel Decorative', serif;
            font-weight: bold;
            color: var(--ink);
            margin-bottom: 8px;
            font-size: 0.9rem;
        }

    .ohara-input, .ohara-select, .ohara-textarea {
        font-family: 'Special Elite', cursive;
        padding: 12px;
        border: 1px solid rgba(61, 43, 31, 0.4);
        background: rgba(255, 255, 255, 0.3);
        color: var(--ink);
        outline: none;
        font-size: 1.1rem;
        transition: 0.3s;
    }

        .ohara-input:focus, .ohara-textarea:focus {
            background: rgba(255, 255, 255, 0.6);
            border: 1px solid var(--ink);
        }

    .button-row {
        display: flex;
        justify-content: space-between;
        margin-top: 30px;
    }

    .btn-ohara {
        font-family: 'Pirata One', cursive;
        font-size: 1.8rem;
        padding: 8px 30px;
        cursor: pointer;
        transition: 0.2s;
        border: 2px solid var(--ink);
        box-shadow: 4px 4px 0px rgba(0,0,0,0.2);
    }

    .btn-save {
        background: var(--ink);
        color: var(--p-light);
    }

        .btn-save:hover {
            transform: translate(-2px, -2px);
            box-shadow: 6px 6px 0px rgba(0,0,0,0.3);
        }

    .btn-cancel {
        background: transparent;
        color: var(--ink);
    }

        .btn-cancel:hover {
            background: rgba(0,0,0,0.05);
        }
</style>

<div class="adventure-container">
    <div class="scroll-form">
        <h2 class="form-title">Registro de Ohara</h2>

        <EditForm Model="@request" OnValidSubmit="HandleSubmit">
            <DataAnnotationsValidator />

            <div class="input-group">
                <label>Título do Volume</label>
                <InputText @bind-Value="request.Titulo" class="ohara-input" placeholder="Ex: O Século Perdido" />
                <ValidationMessage For="@(() => request.Titulo)" />
            </div>

            <div class="input-group">
                <label>Gênero Literário</label>
                <InputSelect @bind-Value="request.Genero" class="ohara-select">
                    @foreach (var genero in Enum.GetValues<EGenero>())
                    {
                        <option value="@genero">@genero.ToString()</option>
                    }
                </InputSelect>
            </div>

            <div class="input-group">
                <label>Relato Escrito</label>
                <InputTextArea @bind-Value="request.Descricao" class="ohara-textarea" rows="4" placeholder="Relatos das correntes marítimas..." />
            </div>

            <div class="button-row">
                @* Recuperado: Botão com Âncora e Texto Abortar *@
                <button type="button" class="btn-ohara btn-cancel" @onclick="Voltar">⚓ Abortar</button>

                <button type="submit" class="btn-ohara btn-save" disabled="@enviando">
                    @(enviando ? "Registrando..." : "Catalogar Item")
                </button>
            </div>
        </EditForm>
    </div>
</div>

@code {
    private LivroRequest request = new();
    private bool enviando = false;

    private async Task HandleSubmit()
    {
        enviando = true;
        var res = await LivroService.Adicionar(request);
        if (res != null) Navigation.NavigateTo("/livros");
        enviando = false;
    }

    private void Voltar() => Navigation.NavigateTo("/livros");
}